<% include ./partials/header %>

  <section class="cart">

    <h3>Checkout</h3>
    <h4>Total: Â£<%= total %></h4>
    <div id="error">
      <%= errMsg %>
    </div>
    <form method="post" action="/checkout" id="checkoutForm">
      <label for="name">Full Name</label>
      <input id="name" name="name" type="text" required autofocus>
      <label for="street">Address</label>
      <input id="street" name="street" type="text" required>
      <label for="city">City</label>
      <input id="city" name="city" type="text" required>
      <label for="postCode">Post/ZIP Code</label>
      <input id="postCode" name="post_code" type="text" required>
      <label for="country">Country</label>
      <input id="country" name="country" type="text" required>
      <label for="cardHolderName">Card Holder Name</label>
      <input id="cardHolderName" type="text" required>
      <label for="cardNumber">Credit Card Number</label>
      <input id="cardNumber" type="text" required>
      <label for="expMonth">Expiry Month</label>
      <input id="expMonth" type="text" required>
      <label for="expYear">Expiry Year</label>
      <input id="expYear" type="text" required>
      <label for="cvc">CVC</label>
      <input id="cvc" name="cvc" type="text" required>
      <button id="payButton" type="submit">Pay</button>
    </form>
    
  </section>
  
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <script type="text/javascript" src="javascripts/checkout.js"></script>

<% include ./partials/footer %>